    <TextView
        android:id="@+id/OverView"
        android:layout_width="346dp"
        android:layout_height="130dp"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/vote"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/OverView"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popularity" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/vote"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adult" />

    <TextView
        android:id="@+id/adult"
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/vote"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backdrop" />

    <TextView
        android:id="@+id/backdrop"
        android:layout_width="342dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/adult"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language" />

    <TextView
        android:id="@+id/language"
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/backdrop"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video" />

    <TextView
        android:id="@+id/video"
        android:layout_width="341dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/backdrop"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voteC" />

    <TextView
        android:id="@+id/voteC"
        android:layout_width="340dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/video"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/origTitle" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="400dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/origTitle"
        android:layout_width="341dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/voteC"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OverView" />


</androidx.constraintlayout.widget.ConstraintLayout>